  <script>
    const ctx1 = document.getElementById('chartKunjungan');
    new Chart(ctx1, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun'],
        datasets: [{
          label: 'Kunjungan',
          data: [120, 150, 180, 160, 200, 220],
          borderColor: '#00b050',
          backgroundColor: 'rgba(0, 176, 80, 0.2)',
          fill: true,
          tension: 0.3
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false }
        }
      }
    });

    const ctx2 = document.getElementById('chartLayanan');
    new Chart(ctx2, {
      type: 'doughnut',
      data: {
        labels: ['Umum', 'KIA', 'Gigi', 'Lansia', 'Imunisasi'],
        datasets: [{
          data: [35, 25, 15, 10, 15],
          backgroundColor: ['#00b050', '#ff9800', '#2196f3', '#f44336', '#9c27b0'],
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
  </script>

